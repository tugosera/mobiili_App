<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobiili_App.NewPage3"
             Title="NewPage3">
    <AbsoluteLayout>
        <Label Text="Lumemmem"
               AbsoluteLayout.LayoutBounds="0.5, 0.1, 100, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <!-- Объединенный элемент Snowman -->
        <AbsoluteLayout x:Name="Snowman"
                        WidthRequest="400"
                        HeightRequest="700">
            
            <Frame x:Name="head"
                   WidthRequest="80" 
                   HeightRequest="80" 
                   CornerRadius="1000" 
                   BackgroundColor="GhostWhite"
                   AbsoluteLayout.LayoutBounds="0.2, 0.15, 100, 100"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Image x:Name="hat"
                   Source="meme.gif"
                   IsAnimationPlaying="True"
                   WidthRequest="75" 
                   HeightRequest="75" 
                   AbsoluteLayout.LayoutBounds="0.2, 0.07, 100, 100"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Frame x:Name="body"
                   WidthRequest="90" 
                   HeightRequest="90" 
                   CornerRadius="1000" 
                   BackgroundColor="GhostWhite"
                   AbsoluteLayout.LayoutBounds="0.2, 0.28, 100, 100"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Frame x:Name="legs"
                   WidthRequest="120" 
                   HeightRequest="120" 
                   CornerRadius="1000" 
                   BackgroundColor="GhostWhite"
                   AbsoluteLayout.LayoutBounds="0.2, 0.425, 100, 100"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>

        <Button
                x:Name="BtnHide"
                Text="Hide lumemmem" 
                Clicked="OnClickedBtnHide"
                AbsoluteLayout.LayoutBounds="0.003, 0.8, 150, 60"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button
            x:Name="BtnColor"
            Text="Color lumemmem" 
            Clicked="OnClickedBtnColor"
            AbsoluteLayout.LayoutBounds="0.003, 0.7, 150, 60"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>
</ContentPage>